.tpl_sb_info{
    width: 100%;
    padding-top: 26rpx;
    padding-bottom: 26rpx;
    display: flex;
    align-items: center;
    position: relative;
}
.tpl_sb_info .pic{
    width: 68rpx;
    height: 68rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.tpl_sb_info .pic image{
    width: 100%;
    height: 100%;
}
.tpl_sb_info .info{
    height: 68rpx;
    padding-left: 17rpx;
}
.tpl_sb_info .info .no{
    font-family: var(--fa);
    font-weight: var(--w4);
    font-size: 34rpx;
    color: var(--zc3);
    line-height: 30rpx;
}
.tpl_sb_info .info .addr{
    font-weight: var(--w5);
    font-size: 24rpx;
    color: var(zc3);
    padding-top: 10rpx;
}
.tpl_sb_info .icon{
    width: 33rpx;
    height: 42rpx;
    position: absolute;
    right: 0;
    top: 46rpx;
}