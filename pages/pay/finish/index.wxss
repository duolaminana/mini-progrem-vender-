/* pages/pay/finish/finish.wxss */
@import '/template/head/index.wxss';
@import '/template/freebtn/index.wxss';

page{
    background-color: var(--wc);
}
.banner-ico{
    width: 216rpx;
    height: 216rpx;
    margin-top: 80rpx;
}
.payresult-title{
    font-weight: var(--w7);
    font-size: 30rpx;
    color: var(--zc);
    margin-top: 15rpx;
    margin-bottom: 40rpx;
}
.payresult-main{
    width: 100%;
    height: 450rpx;
}
.payresult-main .btn{
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--wc);
    width: 252rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    border-radius: 4rpx;
    background-color: var(--zc);
    margin: 0 auto;
    margin-top: 40rpx;
}
.payresult-main .txt{
    text-align: center;
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc3);
}
.payresult-main .pic{
    width: 150px;
    height: 150px;
    margin: 0 auto;
}
.payresult-main .title{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  text-align: center;
  margin-bottom: 5rpx;
}
.payresult-main .pic image{
    width: 290rpx;
    height: 290rpx;
}
.payresult-main .jies{
    width: 100%;
    text-align: center;
    font-weight: var(--w5);
    font-size: 25rpx;
    color: var(--zc9);
}
.payresult-baruls{
    width: 100%;
    display: flex;
    align-items: center;
    padding-top: 10rpx;
}
.payresult-baruls .lis{
    flex: 1;
    text-align: center;
}
.payresult-baruls .jf{
    font-weight: var(--w7);
    font-size: 30rpx;
    color: var(--zc3);
}
.payresult-baruls .lq{
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--wc);
    width: 158rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    border-radius: 4rpx;
    margin: 18rpx auto 20rpx;
}
.payresult-baruls .lq.color{
	background-color: #B7B7B7;
}
.payresult-baruls .lq.color2{
    background-color: var(--zc);
}
.payresult-baruls .sm{
    font-weight: var(--w5);
    font-size: 24rpx;
    color: var(--zc9);
}