/* pages/signIn/signIn.wxss */
@import '../../template/freebtn/index.wxss';
.content{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}
.content .phone{
    width: 100%;
    height: 88rpx;
    margin-top: 32rpx;
}
.content .phone input{
    width: 100%;
    height: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    border: 1rpx solid #B7B7B7;
    border-radius: 8rpx;
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc3);
}
.content .code{
    width: 100%;
    height: 88rpx;
    margin-top: 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.content .code input{
    width: 432rpx;
    height: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    border: 1rpx solid #B7B7B7;
    border-radius: 8rpx;
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc3);
}
.content .code .codebtn{
	border: none;
	box-shadow: none;
	padding: 0;
	margin: 0;
    width: 234rpx;
    height: 100%;
    background-color: var(--zc);
    border-radius: 8rpx;
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--wc);
    display: flex;
    align-items: center;
    justify-content: center;
}
.content .code .codebtn.move{
    background-color: #999;
}
.content .get-code{
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc);
    margin-top: 40rpx;
    width: 100%;
    text-align: right;
    text-decoration: underline;
}
.content .placeholder-style{
  color: var(--zc3);
}
.content .fixedbottom{
  margin-top: 69rpx;
}
.content .fixedbottom .fixedbottom-con{
  position: relative;
  bottom: 0;
  left: 0;
}