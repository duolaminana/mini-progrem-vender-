/**index.wxss**/
@import '/template/yqnav/index.wxss';
/* 轮播图 */
page{
  background-color: white;
}
.banner{
  width: 100%;
  background-color: var(--wc);
  padding-top: 10rpx;
}
.banner image{
  width: 100%;
  position: relative;
}
