/* 热销 */
.hot-goods swiper{
  height: 300rpx;
}
.hot-goods swiper swiper-item.flexleft{
  justify-content: flex-start;
  margin-left: 9rpx;
  max-width: 30%;
}
.hot-goods swiper swiper-item.flexleft2{
  justify-content: flex-start;
  margin-left: 9rpx;
  max-width: 58%;
}
.hot-goods swiper swiper-item.flexleft3{
  justify-content: flex-start;
  margin-left: 9rpx;
  max-width: 87%;
}
.hot-goods .pic{
  width: 144rpx;
  height: 144rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  padding: 17rpx 0;
}
.hot-goods .pic image{
  width: 100%;
  height: 100%;
}
.hot-goods .name{
  padding: 0 10rpx;
  font-weight: var(--w5);
  font-size: 24rpx;
  color: var(--zc3);
  white-space: nowrap; /*不换行*/
  overflow: hidden;
  text-overflow:ellipsis;
  width: 100%;
  padding-top: 4rpx;
}
.hot-goods .price{
  padding: 0 10rpx;
  padding-top: 9rpx;
  padding-bottom: 15rpx;
  display: flex;
  align-items: flex-end;
}
.hot-goods .price .actUUU{
  display: inline-block;
  font-family: var(--fa);
  font-weight: var(--w4);
  font-size: 30rpx;
  color: var(--zc);
  white-space:nowrap;
}
.hot-goods .price .actUUU .shrink{
  display: inline-block;
  font-size: 22rpx;
  font-weight: var(--w5);
  color: var(--zc);
  width: 19rpx;
  margin-top: -2rpx;
}
.hot-goods .price .fakeUUU{
  display: inline-block;
  font-family: var(--fa);
  font-weight: var(--w4);
  font-size: 22rpx;
  color: var(--zc9);
  text-decoration: line-through;
  white-space:nowrap;
  margin-left: 18rpx;

}
.hot-goods .price .fakeUUU .shrink{
  display: inline-block;
  font-size: 18rpx;
  width: 18rpx;
  text-decoration: line-through;
  margin-top: -2rpx;
}

/* 推荐 */
.recommend-goods swiper{
  height: 250rpx;
}
.recommend-goods swiper swiper-item.flexleft{
  justify-content: flex-start;
  margin-left: 9rpx;
  max-width: 30%;
}
.recommend-goods swiper swiper-item.flexleft2{
  justify-content: flex-start;
  margin-left: 9rpx;
  max-width: 58%;
}
.recommend-goods swiper swiper-item.flexleft3{
  justify-content: flex-start;
  margin-left: 9rpx;
  max-width: 87%;
}
.recommend-goods .pic-warp{
	width: 100%;
	height: 156rpx;
	display: flex;
	align-items: flex-end;
	justify-content: space-between;
}
.recommend-goods .pic{
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 16rpx;
  margin: 0 auto;
}
.recommend-goods .pic image{
  width: 100%;
  height: 100%;
}
.recommend-goods .title{
  font-size: 24rpx;
  font-weight: var(--w5);
  position: absolute;
  top: 13rpx;
  left: 13rpx;
  height: 24rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.recommend-goods .bot{
  padding: 0 10rpx;
  height: 60rpx;
  overflow: hidden;
  background-color: var(--wc);
  position: relative;
  display: flex;
  align-items:center; /*垂直居中*/
}
.recommend-goods .distance{
  line-height: 64rpx;
  font-size: 24rpx;
  font-weight: var(--w5);
  color: var(--zc9);
}
.recommend-goods .addr{
  position: absolute;
  right: 10rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  font-weight: var(--w5);
  color: var(--zc);
  text-align: right;
}
.recommend-goods .cus-addr{
	width: 16rpx;
	height: 20rpx;
}