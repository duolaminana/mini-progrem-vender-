<!-- index.wxml -->
<import src="/template/head/head.wxml"></import>
<import src="/template/yqnav/common.wxml"></import>
<wxs src="../../wxs/common.wxs" module="wxsCom" />

<view class="container" style="--height--:{{__hdHeight__}};">
  <template is="tpl-header" data="{{...hdData}}"></template>
  <!--轮播图-->
  <view class="banner">
	<swiper 
	indicator-dots="{{false}}" 
	autoplay="{{true}}" 
	interval="{{3000}}" 
	duration="{{1200}}" 
	circular="{{true}}" 
	bindchange="swiperBannerIdx">
		<navigator 
		wx:for="{{SwiperData}}" 
		wx:key="index" 
		url="/pages/index/yqfriend/index">
			<swiper-item class="cus-lan">
				<image src="{{item.imgurl}}" mode="widthFix" />
				<template is="tpl-yqnav-index"></template>
			</swiper-item>
		</navigator>
	</swiper>
	<view class="dots"><!-- 自定义下标 -->
		<view wx:for="{{SwiperData.length}}" wx:key="index" class="{{index == Swiper_active ? 'active' : ''}}"></view> 
	</view>
	<COM-emptyData 
	show="{{SwiperData.length <= 0}}"
	height="270"
	size="27"
	text="暂无轮播图数据哦!!"
	></COM-emptyData>
  </view>

  <!-- 热销商品 -->
  <view class="hot-goods icus-goods-list">
    <view class="icus-couplet cus-lan">热销商品</view>
	<COM-noLocation 
	show="{{!LOCATION}}"
	height="300"
	size="27"
	icosize="118"
	></COM-noLocation>
	<COM-emptyData 
	show="{{hotGoodsArr.length <= 0}}" 
	height="300"
	size="27"
	text="暂无热销商品数据哦!!"
	></COM-emptyData>
    <swiper 
	wx:if="{{hotGoodsArr.length > 0}}" 
	display-multiple-items="{{hotGoodsArr.length<4?'3':'3.5'}}" 
	previous-margin="18rpx" 
	next-margin="18rpx"
	>
        <swiper-item wx:for-items="{{hotGoodsArr}}" wx:key="index">
          <view bind:tap="goToHotDeviceInfo" data-code="{{item.machineCode}}">
            <view class="lis">
              <view wx:if="{{item.activityPrice}}" class="susp" style="{{'background-color:' + wxsCom.toColor1(174)}}">热销商品</view>
              <view class="pic">
                <image
					src="{{item.productImageAddress}}" 
					bindload="imagesOnload"
					data-cssimgidx="{{index}}" 
					style="{{wxsCom.objToString(ZOOM_IMG[index])}}"
				/>
              </view>
              <view class="name cus-sl200">{{item.productName}}</view>
              <view class="price">
                <view class="ral">
                  <text class="ral-a">{{item.activityPrice || item.sellPrice}}</text>
                  <text class="ral-b">元</text>
                </view>
                <text class="fake" wx:if="{{item.activityPrice}}">{{item.sellPrice}}元</text>
              </view>
            </view>
          </view>
        </swiper-item>
    </swiper>
  </view>
  
  <!-- 推荐商品 -->
  <view class="recommend-goods icus-goods-list">
    <view class="icus-couplet cus-lan">为你推荐</view>
	
    <COM-noLocation
    show="{{!LOCATION}}"
    height="256"
    size="27"
    icosize="118"
    ></COM-noLocation>
	
	<COM-emptyData
	show="{{!recommendGoodsArr.length}}" 
	height="256"
	size="27"
	text="暂无推荐商品数据哦!!"
	></COM-emptyData>
	
    <swiper 
	wx:if="{{recommendGoodsArr.length}}" 
	display-multiple-items="{{recommendGoodsArr.length<4?'3':'3.5'}}" 
	previous-margin="18rpx" 
	next-margin="18rpx"
	>
        <swiper-item wx:for-items="{{recommendGoodsArr}}" wx:key="machineCode">
          <view bind:tap="goToDeviceInfo" data-code="{{item.machineCode}}">
            <view class="lis"
			style="{{'background-color:' + wxsCom.toColor2(item.categoryId)}}"
			>
              <view class="susp"
			  style="{{'background-color:' + wxsCom.toColor1(174)}}"
			  wx:if="{{item.bought==1?true:false}}"
			  >购买过的</view>
              <view class="title" style="{{'color:' + wxsCom.toColor1(item.categoryId)}}">{{wxsCom.toChinses(item.categoryId)}}</view>
              <view class="pic-warp">
				  <view class="pic">
				    <image 
					src="{{item.machineImageAddress}}"
					bindload="imagesOnload"
					data-cssimgkey="cssimgkey" 
					data-cssimgidx="{{index}}" 
					style="{{wxsCom.objToString(cssimgkey[index])}}"
					/>
				  </view>
			  </view>
              <view class="bot">
                <image class="cus-addr" src="/static/img/icon/my_address.png"/>
                <text class="distance">{{wxsCom.distRuler(item.distance)}}</text>
                <text class="addr cus-sl80">{{item.positionAddress}}</text>
              </view>
            </view>
          </view>
        </swiper-item>
    </swiper>
	
  </view>
</view>
<COM-winButton text="扫码购买" icon="/static/img/icon/saoyisao_icon.png" type="scan"></COM-winButton>
