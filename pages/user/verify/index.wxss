/* pages/user/verify/index.wxss */
@import '/template/head/index.wxss';

page{
    background-color: var(--wc);
}
.my-camera{
	--pd: 130rpx;
	width: 100%;
	height: calc(100vh - var(--tpl-header_height));
	position: absolute;
	top: var(--tpl-header_height);
	left: 0;
	z-index: calc(var(--zindex_hd) - 10);
	box-sizing: border-box;
	padding-bottom: var(--pd);
}
.camera-cover{
	width: 100%;
	height: var(--pd);
	display: flex;
	align-items: center;
	justify-content: space-between;
	position: absolute;
	bottom: 0;
}
.camera-cover .left,.camera-cover .right{
	color: var(--wc);
	flex: 1;
	height: 100%;
	line-height: var(--pd);
	text-align: center;
	display: flex;
	align-items: center;
	justify-content: center;
}
.camera-cover .left{
	background-color: #07c160;
}
.camera-cover .right{
	background-color: var(--zc);
}
.verify-title{
    font-weight: var(--w7);
    font-size: 30rpx;
    color: var(--zc);
    text-align: center;
    margin-top: 80rpx;
    margin-bottom: 137rpx;
}
.uls{
    width: 100%;
    padding: 0 98rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.uls .lis{
    text-align: center;
}
.uls .pic image{
    width: 185rpx;
    height: 185rpx;
    margin-top: 41rpx;
    margin-bottom: 18rpx;
}
.uls .title{
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc3);
}
.uls .lis:last-of-type .title{
    color: #D73F3C;
}
.uls .btn{
    width: 242rpx;
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 8rpx;
    text-align: center;
    background-color: var(--zc);
    color: var(--wc);
    font-weight: var(--w5);
    font-size: 30rpx;
	margin: 0 auto;
}
.ajaxGain{
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 600;
	background-color: rgba(0,0,0,.7);
}
.ajaxGain .main{
	position: absolute;
	width: 80%;
	height: 70%;
	top: 15%;
	left: 10%;
	border-radius: 20rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 32rpx;
	color: #999;
	border: 5rpx solid yellow;
	box-sizing: border-box;
	background-color: #202020;
}
.ajaxGain .time{
	position: absolute;
	width: 100%;
	left: 0;
	bottom: 150rpx;
	color: white;
	font-size: 50rpx;
	text-align: center;
}