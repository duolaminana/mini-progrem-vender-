.banner{
    width: 100%;
    margin-top: 20rpx;
    position: relative;
}
.banner image{
    width: 100%;
    max-height: 130rpx;
}
.banner .tpl-yqnav-user{
    left: 69rpx;
}
.ullist{
    width: 100%;
    background-color: var(--wc);
    margin-top: 20rpx;
}
.ullist .lis{
    border-bottom: 1rpx solid #D4D4D4;
    display: flex;
    align-items: center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    height: 76rpx;
    margin-left: 32rpx;
    padding-right: 32rpx;
}
.ullist .lis:last-of-type{
    border: none;
}
.ullist .pic{
    width: 76rpx;
    height: 76rpx;
}
.ullist .pic image{
    width: 76rpx;
    height: 76rpx;
}
.ullist .info{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 76rpx;
}
.ullist .info .left{
    padding-left: 14rpx;
}
.ullist .info .name{
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc3);
    height: 30rpx;
    line-height: 30rpx;
}
.ullist .info .phone{
    font-family: var(--fa);
    font-size: 24rpx;
    color: var(--zc9);
    font-weight: var(--w4);
    height: 24rpx;
    margin-top: 10rpx;
}
.ullist .info .right{
    font-family: var(--fa);
    font-size: 24rpx;
    color: var(--zc9);
    font-weight: var(--w4);
}