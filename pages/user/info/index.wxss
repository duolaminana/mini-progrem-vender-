/* pages/user/info/index.wxss */
.container,.containerX{
    padding-left: 0;
    padding-right: 0;
}
.user-info{
    margin-top: 20rpx;
    background-color: white;
    padding-left: 32rpx;
    box-sizing: border-box;
    width: 100%;
}
.user-info .li{
    border-bottom: 1rpx solid #D4D4D4;
    height: 90rpx;
    line-height: 90rpx;
    padding-right: 32rpx;
    position: relative;
}
.user-info .li navigator{
    height: 100%;
    background-color: transparent;
}
.user-info .li:last-of-type{
    border-bottom: none;
}
.user-info .li:first-of-type{
    height: 150rpx;
    line-height: 150rpx;
}
.user-info .text{
    float: left;
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc3);
}
.user-info .note{
    float: right;
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc3);
}
.user-info .pic image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 1rpx solid var(--zc);
}
.user-info .pic{
    height: 150rpx;
    display: flex;
    align-items: center;
}
.user-info .arrow::after{
    content: '';
    display: block;
    width: 15rpx;
    height: 15rpx;
    border: 5rpx solid var(--zc9);
    position: absolute;
    right: 32rpx;
    top: 50%;
    margin-top: -9rpx;
    border-left-color: transparent;
    border-bottom-color: transparent;
    border-radius: 5rpx;
    transform: rotate(45deg);
}
.user-info .arrow .note{
    padding-right: 35rpx;
}
.user-info .note.love,.user-info .note.notlove{
    height: 100%;
    display: flex;
    align-items: center;
}
.user-info .note.love view,.user-info .note.notlove view{
    border-radius: 2rpx;
    background-color: var(--zc);
    color: var(--wc);
    font-weight: var(--w7);
    font-size: 24rpx;
    height: 42rpx;
    line-height: 42rpx;
    padding: 0 20rpx;
}
.user-info .note.notlove view{
    background-color: var(--zc9);
}