.ib-couplet{
    width: calc(100% - 65rpx);
    margin: 20rpx auto;
    padding-top: 24rpx;
    padding-bottom: 24rpx;
    background-color: var(--wc);
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    position: relative;
}
.ib-couplet .pic{
    width: 100rpx;
    height: 100rpx;
    margin-left: 24rpx;
    margin-right: 21rpx;
}
.ib-couplet .pic image{
    width: 100%;
    height: 100%;
}
.ib-couplet .info .num{
    font-weight: bold;
    font-size: 48rpx;
    color: var(--zc3);
}
.ib-couplet .info .num .jl{
    font-weight: Regular;
    font-size: 28rpx;
    color: var(--zc3);
}
.ib-couplet .info .text{
    font-weight: var(--w5);
    font-size: 24rpx;
    color: var(--zc3);
}
.ib-couplet .tonav{
    font-weight: var(--w5);
    font-size: 24rpx;
    color: var(--zc);
    position: absolute;
    right: 41rpx;
}