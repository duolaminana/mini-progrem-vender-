/* component/getGoodsCode/getGoodsCode.wxss */
@import '/static/css/$class.wxss';
@import '/pages/common/sbinfo/index.wxss';
@import '/pages/common/goodsinfo/index.wxss';
@import '/pages/common/orderinfo/index.wxss';

.container{
    display: flex;
    align-items: center;
    justify-content: center;
}
.content{
    width: 540rpx;
    height: 920rpx;
    background-color: var(--wc);
    border-radius: 8rpx;
    box-sizing: content-box;
    padding: 36rpx;
    position: relative;
}
.title{
    font-size: 36rpx;
    font-weight:var(--w7);
    color: var(--zc3);
    text-align: center;
    margin-bottom: 22rpx;
}
.pic{
    text-align: center;
    margin-bottom: 14rpx;
}
.pic image{
    width: 200rpx;
    height: 200rpx;
}
.exp{
    font-size: 24rpx;
    font-weight: var(--w5);
    color: var(--zc9);
    text-align: center;
    padding-bottom: 26rpx;
}
.close{
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    bottom: -92rpx;
    left: calc(50% - 30rpx);
}
.close image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    position: relative;
}
.xline{
    display: block;
    width: 100%;
    height: 2rpx;
    background-color: #D4D4D4;
}