.hbd-gopay{
	position: absolute;
	right: 25rpx;
	bottom: 15rpx;
	padding: 0;
	margin: 0;
	border: 0;
	box-shadow: none;
	width: 142rpx;
	height: 68rpx;
	display: flex;
	align-items: center;
	color: var(--wc);
	background-color: var(--zc);
	font-size: 24rpx;
	font-weight: var(--w4);
}
.hbd-paynumber{
	position: absolute;
	right: 25rpx;
	top: 15rpx;
	font-size: 20rpx;
	font-weight: var(--w4);
	color: var(--zc);
}