/* pages/device/sminfo/index.wxss */
.author-header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.author-header image {
    width: 170rpx;
    height: 170rpx;
}
 
.author-content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.author-content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.author-bottom {
    border-radius: 80rpx;
    font-size: 35rpx;
	width: 85%;
}
.container{
    --sbinfo_height: 172rpx;
    --sbinfo_padding: 58rpx;
}
.fixban{
    position: fixed;
    top: var(--tpl-header_height);
    width: 100%;
    z-index: 1;
}
.sbinfo{
    overflow: hidden;
    padding-top: 20rpx;
    padding-bottom: 38rpx;
    position: relative;
    background-color: var(--wc);
}
.sbinfo .pic{
    width: 120rpx;
    height: 120rpx;
}
.sbinfo .left{
    float: left;
    width: 172rpx;
    height: var(--sbinfo_height);
    border-radius: 4rpx;
    background-color: #FFEACF;
    display: flex;
    align-items:center; /*垂直居中*/
    justify-content: center; /*水平居中*/
}
.sbinfo .right{
    float: left;
    padding-left: 30rpx;
    padding-right: 20rpx;
}
.sbinfo .title{
    line-height: 30rpx;
}
.sbinfo .title .no{
    font-size: 30rpx;
    font-weight: var(--w7);
    color: var(--zc3);
    padding-right: 24rpx;
}
.sbinfo .title .name{
    font-size: 24rpx;
    font-weight: var(--w5);
    color: var(--zc3);
}
.sbinfo .title .dec{
    font-size: 24rpx;
    font-weight: var(--w5);
    color: var(--zc);
    position: absolute;
    right: 32rpx;
    top: 24rpx;
}
.sbinfo .type{
    font-size: 24rpx;
    font-weight: var(--w5);
    color: var(--zc9);
    padding-top: 6rpx;
    margin-top: 8rpx;
}
.sbinfo .sign{
    font-size: 20rpx;
    font-weight: var(--w4);
    color: var(--zc);
    height: 24rpx;
    min-width: 2rpx;
    margin-top: 5rpx;
}
.sbinfo .addr{
    display: flex;
    align-items:center; /*垂直居中*/
    padding-top: 13rpx;
    margin-top: 22rpx;
}
.sbinfo .addr .text{
    font-size: 24rpx;
    font-weight: var(--w4);
    color: var(--zc9);
}
.goodsshow{
    width: 100%;
    height: 100%;
    padding-top: calc(var(--sbinfo_height) + var(--sbinfo_padding) + var(--tpl-header_height));
    padding-bottom: 100rpx;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    display: flex;
}
.goodsshow .left{
    width: 160rpx;
    height: 100%;
    background-color: #F5F5F5;
    overflow-y: scroll;
}
.goodsshow .left .li{
    height: 86rpx;
    line-height: 86rpx;
    text-align: center;
    font-size: 24rpx;
    font-weight: var(--w5);
    color: var(--zc3);
}
.goodsshow .left .li.active{
    background-color: white;
}
.goodsshow .right-warp{
    width: 590rpx;
    height: 100%;
    background-color: white;
    overflow-y: scroll;
}
.goodsshow .right{
    padding: 0 17rpx;
    padding-bottom: 30rpx;
}
.goodsshow .right:nth-last-of-type(1){
    padding-bottom: 80rpx;
}
.goodsshow .right .title{
    font-size: 30rpx;
    font-weight: var(--w5);
    color: var(--zc3);
    height: 86rpx;
    line-height: 68rpx;
}
.goodsshow .right .li{
    height: 120rpx;
    padding: 15rpx 0;
    display: flex;
    align-items: center;
    position: relative;
}
.goodsshow .right .li .pic{
    width: 120rpx;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.goodsshow .right .li .pic image{
    width: calc(var(--pscale) * 110rpx);
    height: 110rpx;
}
.goodsshow .right .info{
    height: 120rpx;
    padding-left: 15rpx;
}
.goodsshow .right .name{
    font-size: 30rpx;
    font-weight: var(--w5);
    color: var(--zc3);
}
.goodsshow .right .rep{
    font-size: 24rpx;
    font-weight: var(--w5);
    color: var(--zc9);
}
.goodsshow .right .price{
    display: flex;
    align-items: flex-end;
	margin-top: 18rpx;
	height: 30rpx;
}
.goodsshow .right .price .a{
    font-family: var(--fa);
    font-size: 30rpx;
    font-weight: var(--w4);
    color: var(--zc);
}
.goodsshow .right .price .b{
    font-size: 22rpx;
    font-weight: var(--w4);
    color: var(--zc);
}
.goodsshow .right .price .c{
	text-decoration: line-through;
    color: var(--zc9);
	margin-left: 14rpx;
	font-size: 24rpx;
	font-family: var(--fa);
	font-weight: var(--w4);
	color: var(--zc9);
}
.goodsshow .right .price .c text{
	font-size: 22rpx;
	font-family: var(--fp);
}
.goodsshow .right .count-warp{
	position: absolute;
	right: 25rpx;
	bottom: 15rpx;
	height: 36rpx;
}

