/* components/signIn/signIn.wxss */
.com-signIn{
	position: fixed;
	top: 0;
	left: 0;
	width: 100vw;
	height: 100vh;
	z-index: calc(var(--zindex_zzc) + 11);
	background-color: #f3f3f3;
}
.com-signIn .content{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 92%;
	margin: 0 auto;
}
.com-signIn .content .phone{
    width: 100%;
    height: 88rpx;
    margin-top: 32rpx;
}
.com-signIn .content .phone input{
    width: 100%;
    height: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    border: 1rpx solid #B7B7B7;
    border-radius: 8rpx;
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc3);
	background-color: white;
}
.com-signIn .content .code{
    width: 100%;
    height: 88rpx;
    margin-top: 32rpx;
    margin-bottom: 150rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.com-signIn .content .code input{
    width: 432rpx;
    height: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    border: 1rpx solid #B7B7B7;
    border-radius: 8rpx;
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc3);
	background-color: white;
}
.com-signIn .content .code .codebtn{
	border: none;
	box-shadow: none;
	padding: 0;
	margin: 0;
    width: 234rpx;
    height: 100%;
    background-color: var(--zc);
    border-radius: 8rpx;
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--wc);
    display: flex;
    align-items: center;
    justify-content: center;
}
.com-signIn .content .code .codebtn.move{
    background-color: #999;
}
.com-signIn .content .get-code{
    font-weight: var(--w5);
    font-size: 30rpx;
    color: var(--zc);
    margin-top: 40rpx;
    width: 100%;
    text-align: right;
    text-decoration: underline;
}
.com-signIn .content .placeholder-style{
  color: var(--zc3);
}
.com-signIn .content .fixedbottom{
  margin-top: 69rpx;
}
.com-signIn .content .fixedbottom .fixedbottom-con{
  position: relative;
  bottom: 0;
  left: 0;
}